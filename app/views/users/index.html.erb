<div class="container">
  <div class="row">
    <div class="col-xs-9">
      <h2>User</h2>
      <table class="table table-hover table-inverse">
        <thead>
            <tr>
                <th>Icon</th>
                <th>Name</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
              <% @users.each do |user| %>
              <tr>
                <td>
                  <%= attachment_image_tag user, :profile_image, format:"jpg", fallback:"no_image.png", :size => '70x70' %>
                </td>
                 <td>
                   <font size="4"><%= user.name %></font>
                 </td>
                 <td><%= link_to "詳細",user_path(user.id), class: "btn btn-md btn-success"%></td>
              </tr>
              <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
