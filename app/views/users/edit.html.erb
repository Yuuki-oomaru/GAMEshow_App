<div class="container">
  <div class="row">
    <div class="col-md-8 col-sm-offset-5">
      <h2>編集</h2>
    <div>
     <%= form_with(model: @user, method: :patch, local: true) do |f| %>
      <div class="row">
        <div class="col-lg-12">
          <%= f.label :image %>
          <%= f.attachment_field :profile_image %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-lg-12">
            <%= f.label :name %><br />
            <%= f.text_field :name, placeholder:"名前" %>
        </div>
        </div>
      <div class="row">
        <div class="col-lg-12">
          <%= f.label :introduction %><br />
          <%= f.text_area :introduction, rows:"3", placeholder:"コメント" %>
        </div>
      </div>
      <br>
      <%= f.submit "送信", class:"btn btn-lg btn-success btn-base-1 mt-20" %>
    <% end %>
    </div>
  </div>
</div>
