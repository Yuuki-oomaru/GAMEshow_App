<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="input-form">
        <h1><%= @user.name %>さんとのチャット</h1>
        <div class="message_<%= @room.id %>" style="padding: 0 10%">
          <%= render "message", message: @messages %>
        </div>
        <h3>
          <span class="input-title">New Message</span>
        </h3>
        <%= form_with model: @message, data: {remote: true} do |f| %>
        <%= f.text_field :message, rows:"2",class:"form-control input-sm" %>
        <%= f.hidden_field :room_id %>
        <%= f.submit "Message", class:"btn btn-warning" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
