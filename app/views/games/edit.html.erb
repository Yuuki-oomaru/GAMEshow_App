<%= form_with(model: @game, method: :patch, local: true) do |f| %>
<div class="container">
  <%= render 'layouts/errors', model: @game %>
  <div class="row">
    <div class="col-sm-2"><%= f.label :image %></div>
    <div class="col-sm-10 form-inline" style="padding: 3px;">
      <%= f.attachment_field :game_image %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2"><%= f.label :Title %></div>
    <div class="col-sm-10 form-inline" style="padding: 3px;">
      <%= f.text_field :title, class:"form-control input-sm",placeholder:"タイトル" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2"><%= f.label :Tags %></div>
    <div class="col-sm-10 form-inline" style="padding: 3px;">
      <%= f.text_field :tag_list, class:"form-control input-sm", value: @game.tag_list.join(','), placeholder:"タグ" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2"><%= f.label :comment %></div>
    <div class="col-sm-10" style="padding: 3px;">
      <%= f.text_area :body, rows:"3", class:"form-control input-sm", placeholder:"コメント" %>
    </div>
  </div>

  <div class="text-center" style="padding: 30px;">
    <%= f.submit "送信", class:"btn btn-lg btn-success btn-base-1 mt-20" %>
  </div>
</div>
<% end %>
