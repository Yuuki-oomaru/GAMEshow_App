<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>編集</h2>
    <div>
     <%= form_with(model: @game, method: :put, local: true) do |f| %>
      <div class="row">
        <div class="col-xs-6">
          <%= f.label :image %>
          <%= f.attachment_field :game_image %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-xs-6">
            <%= f.label :title %>
            <%= f.text_field :title, placeholder:"タイトル" %>
        </div>
        </div>
      <div class="row">
        <div class="col-xs-12">
          <%= f.label :comment %><br />
          <%= f.text_area :body, rows:"3", placeholder:"コメント" %>
        </div>
      </div>
      <br>
      <%= f.submit "送信", class:"btn btn-lg btn-success btn-base-1 mt-20" %>
    <% end %>
    </div>
  </div>
</div>
