<%= render 'layouts/errors', model: @game %>
<% games.each do |game| %>
<tr>
  <td></td>
   <td>
     <%= link_to(game) do %>
     <%= attachment_image_tag game, :game_image, format:"jpg", fallback:"no_image.png", :size => '100x100' %>
     <% end %>
   </td>

   <td><font size="4"><%= game.title %></font></td>
   <td><font size="4"><%= game.user.name %></font></td>
     <% game.tag_list.each do |tag| %>
   <td>
     <%= link_to tag, tag_path(tag),class: "badge badge-primary" %>
   </td>
     <% end %>
</tr>
<% end %>
