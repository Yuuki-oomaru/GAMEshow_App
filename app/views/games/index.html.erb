<div class="container">
  <div class="row">
    <h2>新規投稿</h2>
      <div class="col-xs-3">
        <%= form_with(model: @game, url: games_path(@game), method: :post, remote: true) do |f| %>
         <div class="row">
           <div class="col-xs-6">
             <%= f.label :image %>
             <%= f.attachment_field :game_image %>
           </div>
         </div>
          <br>
         <div class="row">
            <div class="col-xs-6">
              <%= f.label :title %>
              <%= f.text_field :title, placeholder:"タイトル" %>
            </div>
         </div>
         <div class="row">
            <div class="col-xs-6">
              <%= f.label :comment %><br />
              <%= f.text_area :body, rows:"3", placeholder:"コメント" %>
            </div>
         </div>
          <br>
              <%= f.submit "送信", class:"btn btn-lg btn-success btn-base-1 mt-20" %>
        <% end %>
      </div>

      <div class="col-xs-9">
        <h2>GAME一覧</h2>
        <table class="table table-hover table-inverse">
          <thead>
				      <tr>
					        <th></th>
				        	<th>Image</th>
					        <th>Title</th>
                  <th>投稿者</th>
					        <th colspan="3"></th>
				      </tr>
		    	</thead>

          <tbody class="list">
              <%= render 'games/list', games: @games %>
          </tbody>
        </table>
      </div>
    </div>
</div>
